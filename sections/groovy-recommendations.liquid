<style>
  .groovy-recommendations {
    padding: 4rem 0;
    background: linear-gradient(135deg, #f8f9ff 0%, #fff 100%);
    margin: 3rem 0;
  }
  
  .groovy-recommendations__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .groovy-recommendations__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .groovy-recommendations__title {
    font-family: 'Preahvihear', sans-serif;
    font-size: 2.8rem;
    font-weight: 700;
    color: #222;
    margin-bottom: 1rem;
    position: relative;
  }
  
  .groovy-recommendations__title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, #2465aa, #ff6b35);
    border-radius: 2px;
  }
  
  .groovy-recommendations__subtitle {
    font-family: 'Poppins', sans-serif;
    font-size: 1.3rem;
    color: #666;
    font-weight: 400;
  }
  
  .groovy-recommendations__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .groovy-recommendation-card {
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(36, 101, 170, 0.08);
    overflow: hidden;
    transition: all 0.3s ease;
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .groovy-recommendation-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 48px rgba(36, 101, 170, 0.15);
  }
  
  .groovy-recommendation-card__image-wrap {
    position: relative;
    padding: 2rem 2rem 0 2rem;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }
  
  .groovy-recommendation-card__image {
    width: 100%;
    max-width: 200px;
    height: 200px;
    object-fit: contain;
    background: #f8f8f8;
    border: 3px solid #2465aa;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(36, 101, 170, 0.1);
    transition: all 0.3s ease;
  }
  
  .groovy-recommendation-card:hover .groovy-recommendation-card__image {
    transform: scale(1.05);
    box-shadow: 0 8px 24px rgba(36, 101, 170, 0.2);
  }
  
  .groovy-recommendation-card__badges {
    position: absolute;
    top: 1.5rem;
    left: 2rem;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 2;
  }
  
  .groovy-recommendation-card__badge {
    background: #eafff2;
    color: #1db16b;
    font-family: 'Preahvihear', sans-serif;
    font-size: 0.9rem;
    font-weight: 700;
    border-radius: 12px;
    padding: 0.3em 0.8em;
    box-shadow: 0 2px 8px rgba(36, 101, 170, 0.1);
  }
  
  .groovy-recommendation-card__badge--sale {
    background: #ffeaea;
    color: #ff2d2d;
    border: 2px solid #ff2d2d;
  }
  
  .groovy-recommendation-card__content {
    padding: 1.5rem 2rem 2rem 2rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .groovy-recommendation-card__title {
    font-family: 'Preahvihear', sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: #222;
    margin-bottom: 0.8rem;
    line-height: 1.3;
    text-align: center;
  }
  
  .groovy-recommendation-card__price {
    text-align: center;
    margin-bottom: 1.5rem;
    font-family: 'Preahvihear', sans-serif;
  }
  
  .groovy-recommendation-card__price .price--on-sale .price-item--regular {
    text-decoration: line-through;
    color: #999;
    font-size: 1rem;
    margin-right: 0.5rem;
  }
  
  .groovy-recommendation-card__price .price-item--sale {
    color: #ff6b35;
    font-size: 1.4rem;
    font-weight: 700;
  }
  
  .groovy-recommendation-card__price .price-item--last {
    color: #222;
    font-size: 1.4rem;
    font-weight: 700;
  }
  
  .groovy-recommendation-card__buttons {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    margin-top: auto;
  }
  
  .groovy-recommendation-card__btn {
    border: 2px solid #ff6b35;
    color: #ff6b35;
    background: #fff;
    border-radius: 8px;
    font-family: 'Preahvihear', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    padding: 0.8em 0;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }
  
  .groovy-recommendation-card__btn--primary {
    background: #ff6b35;
    color: #fff;
  }
  
  .groovy-recommendation-card__btn:hover {
    background: #fff3ec;
    color: #ff6b35;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.2);
  }
  
  .groovy-recommendation-card__btn--primary:hover {
    background: #e55a2b;
    color: #fff;
  }
  
  @media (max-width: 768px) {
    .groovy-recommendations {
      padding: 2rem 0;
    }
    
    .groovy-recommendations__title {
      font-size: 2.2rem;
    }
    
    .groovy-recommendations__grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
    }
    
    .groovy-recommendation-card__image {
      max-width: 160px;
      height: 160px;
    }
  }
  
  @media (max-width: 480px) {
    .groovy-recommendations__grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    
    .groovy-recommendation-card__content {
      padding: 1rem 1.5rem 1.5rem 1.5rem;
    }
  }
</style>

<div class="groovy-recommendations">
  <div class="groovy-recommendations__container">
    <div class="groovy-recommendations__header">
      <h2 class="groovy-recommendations__title">{{ section.settings.title | default: "You'll Love These Too!" }}</h2>
      <p class="groovy-recommendations__subtitle">{{ section.settings.subtitle | default: "Discover more groovy products that match your style" }}</p>
    </div>
    
    <div class="groovy-recommendations__grid">
      {% assign recommendations = product.recommendations.products | limit: section.settings.products_to_show %}
      {% if recommendations.size > 0 %}
        {% for product in recommendations %}
          <div class="groovy-recommendation-card">
            <div class="groovy-recommendation-card__image-wrap">
              {% if product.available %}
                <div class="groovy-recommendation-card__badges">
                  <span class="groovy-recommendation-card__badge">Available</span>
                  {% if product.compare_at_price > product.price %}
                    <span class="groovy-recommendation-card__badge groovy-recommendation-card__badge--sale">Sale</span>
                  {% endif %}
                </div>
              {% endif %}
              
              <a href="{{ product.url }}">
                {% if product.featured_media %}
                  <img 
                    src="{{ product.featured_media | image_url: width: 400 }}"
                    alt="{{ product.featured_media.alt | escape | default: product.title }}"
                    class="groovy-recommendation-card__image"
                    loading="lazy"
                  >
                {% else %}
                  <img 
                    src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-image.png"
                    alt="Product placeholder"
                    class="groovy-recommendation-card__image"
                    style="opacity: 0.5;"
                  >
                {% endif %}
              </a>
            </div>
            
            <div class="groovy-recommendation-card__content">
              <h3 class="groovy-recommendation-card__title">
                <a href="{{ product.url }}" style="color: inherit; text-decoration: none;">
                  {{ product.title }}
                </a>
              </h3>
              
              <div class="groovy-recommendation-card__price">
                {%- render 'price',
                  product: product,
                  use_variant: true,
                  show_badges: false,
                  price_class: 'price--large'
                -%}
              </div>
              
              <div class="groovy-recommendation-card__buttons">
                {% if product.available %}
                  <form method="post" action="/cart/add" class="groovy-recommendation-card__btn groovy-recommendation-card__btn--primary">
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" style="background: none; border: none; color: inherit; font: inherit; cursor: pointer; width: 100%;">
                      Add to Cart
                    </button>
                  </form>
                {% endif %}
                <a href="{{ product.url }}" class="groovy-recommendation-card__btn">
                  View Details
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <!-- Fallback: Show products from the same collection or featured collection -->
        {% assign fallback_products = collections.all.products | limit: section.settings.products_to_show %}
        {% for product in fallback_products %}
          {% if product.id != current_product.id %}
            <div class="groovy-recommendation-card">
              <div class="groovy-recommendation-card__image-wrap">
                {% if product.available %}
                  <div class="groovy-recommendation-card__badges">
                    <span class="groovy-recommendation-card__badge">Available</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="groovy-recommendation-card__badge groovy-recommendation-card__badge--sale">Sale</span>
                    {% endif %}
                  </div>
                {% endif %}
                
                <a href="{{ product.url }}">
                  {% if product.featured_media %}
                    <img 
                      src="{{ product.featured_media | image_url: width: 400 }}"
                      alt="{{ product.featured_media.alt | escape | default: product.title }}"
                      class="groovy-recommendation-card__image"
                      loading="lazy"
                    >
                  {% else %}
                    <img 
                      src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-image.png"
                      alt="Product placeholder"
                      class="groovy-recommendation-card__image"
                      style="opacity: 0.5;"
                    >
                  {% endif %}
                </a>
              </div>
              
              <div class="groovy-recommendation-card__content">
                <h3 class="groovy-recommendation-card__title">
                  <a href="{{ product.url }}" style="color: inherit; text-decoration: none;">
                    {{ product.title }}
                  </a>
                </h3>
                
                <div class="groovy-recommendation-card__price">
                  {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: false,
                    price_class: 'price--large'
                  -%}
                </div>
                
                <div class="groovy-recommendation-card__buttons">
                  {% if product.available %}
                    <form method="post" action="/cart/add" class="groovy-recommendation-card__btn groovy-recommendation-card__btn--primary">
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" style="background: none; border: none; color: inherit; font: inherit; cursor: pointer; width: 100%;">
                        Add to Cart
                      </button>
                    </form>
                  {% endif %}
                  <a href="{{ product.url }}" class="groovy-recommendation-card__btn">
                    View Details
                  </a>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Groovy Recommendations",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "You'll Love These Too!"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Discover more groovy products that match your style"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Number of products to show"
    }
  ],
  "presets": [
    {
      "name": "Groovy Recommendations"
    }
  ]
}
{% endschema %} 