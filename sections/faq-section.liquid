<section id="faq" class="faq-section" style="background: #eaf7fd; padding: 80px 0;">
  <div style="max-width: 1200px; margin: 0 auto; display: flex; flex-wrap: wrap; gap: 60px; align-items: flex-start;">
    <!-- Left: Image -->
    <div style="flex: 1 1 40%; min-width: 320px; display: flex; align-items: center; justify-content: center;">
      <img src="{{ 'faq-sec-compressed.png' | asset_url }}" alt="Groovy Mascot in Classroom" style="max-width: 100%; height: auto; border-radius: 24px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); background: white;" />
    </div>
    <!-- Right: FAQ Accordion -->
    <div style="flex: 1 1 55%; min-width: 320px;">
      <div style="display: inline-block; padding: 8px 16px; border: 2px solid #f26522; border-radius: 20px; color: #f26522; font-family: 'Preahvihear', sans-serif; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; background: transparent; margin-bottom: 20px;">FAQ</div>
      <h2 style="font-family: 'Preahvihear', sans-serif; font-size: 2.5rem; font-weight: 700; color: #2d5da1; margin: 0 0 32px 0;">Frequently Asked Questions by our Customers</h2>
      <div class="faq-accordion">
        {% assign faqs = section.settings.faqs %}
        {% for faq in faqs %}
        <details style="margin-bottom: 18px; background: #fff; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.04); padding: 0 0 0 0;">
          <summary style="font-family: 'Preahvihear', sans-serif; font-size: 1.1rem; font-weight: 600; color: #333; padding: 18px 24px; cursor: pointer; outline: none; border: none;">{{ faq.question }}</summary>
          <div style="font-family: 'Preahvihear', sans-serif; font-size: 1rem; color: #666; padding: 0 24px 18px 24px;">{{ faq.answer }}</div>
        </details>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "list",
      "id": "faqs",
      "label": "FAQs"
    }
  ],
  "presets": [
    {"name": "FAQ Section", "category": "Custom Sections"}
  ]
}
{% endschema %} 