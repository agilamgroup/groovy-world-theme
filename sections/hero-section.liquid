{% comment %}
  Hero Section for Groovy World
  Replicates the WordPress homepage hero section
{% endcomment %}

<div class="hero-section" style="
  background: linear-gradient(135deg, #e85122 0%, #ff6900 100%);
  color: white;
  padding: 80px 20px;
  text-align: center;
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
">
  <div class="hero-content" style="max-width: 800px; margin: 0 auto;">
    
    <!-- Badge -->
    <div class="hero-badge" style="
      background: rgba(255, 255, 255, 0.2);
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      display: inline-block;
      margin-bottom: 20px;
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
    ">
      ðŸš€ Revolutionizing Children's Writing
    </div>

    <!-- Logo Placeholder -->
    <div class="hero-logo" style="
      width: 200px;
      height: 60px;
      background: white;
      margin: 0 auto 30px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #e85122;
      font-weight: bold;
      font-size: 18px;
    ">
      GROOVY WORLD
    </div>

    <!-- Dynamic Text -->
    <h1 class="hero-title" style="
      font-size: 3.5rem;
      font-weight: 700;
      margin-bottom: 20px;
      line-height: 1.2;
    ">
      Making Writing
      <span style="
        background: linear-gradient(45deg, #ffd700, #ffed4e);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      ">Fun & Engaging</span>
    </h1>

    <!-- Description -->
    <p class="hero-description" style="
      font-size: 1.25rem;
      margin-bottom: 40px;
      opacity: 0.9;
      line-height: 1.6;
    ">
      Transform the way children learn to write with our innovative approach that combines creativity, technology, and proven educational methods.
    </p>

    <!-- CTA Button -->
    <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="hero-cta" style="
      background: white;
      color: #e85122;
      padding: 16px 32px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 600;
      font-size: 1.1rem;
      display: inline-block;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    ">
      {{ section.settings.button_text | default: 'Explore Our Books' }}
    </a>

  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "ðŸš€ Revolutionizing Children's Writing"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "default": "Making Writing Fun & Engaging"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Transform the way children learn to write with our innovative approach that combines creativity, technology, and proven educational methods."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Our Books"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %} 