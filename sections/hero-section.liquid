{% comment %}
  Hero Section - Groovy World Homepage
  Replicates the WordPress homepage hero section
{% endcomment %}

<div class="hero-section" style="min-height: 100vh; background: rgb(var(--color-background)); background-image: url('{{ 'hero_web.png' | asset_url }}'); background-size: cover; background-position: center; background-repeat: no-repeat; display: flex; align-items: center; padding: 40px 20px; position: relative;">
  <div style="max-width: 1200px; margin: 0 auto; display: flex; flex-direction: row; gap: 60px; align-items: center; width: 100%;">
    <div style="display: flex; flex-direction: column; gap: 30px; max-width: 600px; background: rgba(255,255,255,0.0);">
      <!-- Badge -->
      <div style="display: inline-block; padding: 8px 16px; border: 2px solid #ff6b35; border-radius: 20px; color: #ff6b35; font-family: 'Preahvihear', sans-serif; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; width: fit-content; background: transparent;">
        Ready, Set, Write with Groovy
      </div>
      <!-- Title -->
      <h1 class="hero-title" style="margin: 0; font-family: 'Preahvihear', sans-serif;">
        Feel the Groove. Learn to Write.
      </h1>
      <!-- Description -->
      <p class="hero-subtext" style="margin: 0; text-align: left; font-family: 'Poppins', sans-serif; font-size: 1.3rem; line-height: 1.6;">
        Groovy Books use tactile grooves and real feedback to teach children how to write - step by step, stroke by stroke. <br>
        By feeling every letter and number as they trace, kids build muscle memory, confidence, and the foundation for beautiful handwriting that lasts.
      </p>
      <!-- Button -->
      <a href="#latest-books" style="display: inline-flex; align-items: center; gap: 8px; padding: 12px 24px; background: #ff6b35; color: #ffffff; text-decoration: none; border-radius: 6px; font-family: 'Preahvihear', sans-serif; font-weight: 600; font-size: 1.3rem; transition: all 0.3s ease; width: fit-content;">
        Explore Books
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" style="fill: #ffffff;">
          <path d="M5,13H16.17l-4.88,4.88a1.008,1.008,0,0,0,0,1.42,1,1,0,0,0,1.41,0l6.59-6.59a1,1,0,0,0,0-1.41L12.71,4.7A1,1,0,1,0,11.3,6.11L16.17,11H5a1,1,0,0,0,0,2Z"/>
        </svg>
      </a>
      <!-- Maskottchen nur auf Mobile anzeigen -->
      <img src="{{ 'groovy-character.png' | asset_url }}" alt="Groovy Character" class="hero-mascot-mobile" loading="lazy" />
    </div>
    <!-- Kein Bild mehr hier, da es als Hintergrund dient -->
  </div>
</div>

<style>
@media (max-width: 750px) {
  .hero-section {
    background-position: left center !important;
  }
  .hero-mascot-mobile {
    display: block;
    position: absolute;
    right: 8px;
    bottom: 8px;
    width: 140px;
    max-width: 40vw;
    z-index: 0;
    pointer-events: none;
  }
}
@media (min-width: 751px) {
  .hero-mascot-mobile {
    display: none;
  }
}
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Ready, Set, Write with Groovy"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "default": "Unlock the Joy of Writing with Groovy Books"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Groovy Books revolutionize the way children learn to write, making it fun, engaging, and effective. Say goodbye to frustration and hello to beautifully crafted handwriting."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Books"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Button Link",
      "default": "#books"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %} 