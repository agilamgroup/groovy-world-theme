{% comment %}
  Hero Section - Groovy World Homepage
  Replicates the WordPress homepage hero section
{% endcomment %}

<div class="hero-section" style="min-height: 100vh; background: rgb(var(--color-background)); background-image: url('{{ 'hero_web.png' | asset_url }}'); background-size: cover; background-position: center; background-repeat: no-repeat; display: flex; align-items: center; padding: 60px 20px;">
  <div style="max-width: 1200px; margin: 0 auto; display: flex; flex-direction: row; gap: 80px; align-items: center; width: 100%;">
    <div style="display: flex; flex-direction: column; gap: 40px; max-width: 700px; background: rgba(255,255,255,0.0);">
      <!-- Badge -->
      <div style="display: inline-block; padding: 12px 24px; border: 2px solid #ff6b35; border-radius: 25px; color: #ff6b35; font-family: 'Preahvihear', sans-serif; font-size: 16px; font-weight: 600; text-transform: uppercase; letter-spacing: 1.5px; width: fit-content; background: transparent;">
        Ready, Set, Write with Groovy
      </div>
      <!-- Title -->
      <h1 class="hero-title" style="margin: 0;">
        Unlock the Joy of <br>
        Writing with<br>
        Groovy Books
      </h1>
      <!-- Description -->
      <p class="hero-subtext" style="margin: 0;">
        Groovy Books revolutionize the way children learn to write, making it fun, engaging, and effective. Say goodbye to frustration and hello to beautifully crafted handwriting.
      </p>
      <!-- Button -->
      <a href="#books" style="display: inline-flex; align-items: center; gap: 12px; padding: 20px 40px; background: #ff6b35; color: #ffffff; text-decoration: none; border-radius: 30px; font-family: 'Preahvihear', sans-serif; font-weight: 600; font-size: 1.2rem; transition: all 0.3s ease; width: fit-content; box-shadow: 0 4px 15px rgba(255, 107, 53, 0.3);">
        Explore Books
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: #ffffff;">
          <path d="M5,13H16.17l-4.88,4.88a1.008,1.008,0,0,0,0,1.42,1,1,0,0,0,1.41,0l6.59-6.59a1,1,0,0,0,0-1.41L12.71,4.7A1,1,0,1,0,11.3,6.11L16.17,11H5a1,1,0,0,0,0,2Z"/>
        </svg>
      </a>
    </div>
    <!-- Kein Bild mehr hier, da es als Hintergrund dient -->
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Ready, Set, Write with Groovy"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "default": "Unlock the Joy of Writing with Groovy Books"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Groovy Books revolutionize the way children learn to write, making it fun, engaging, and effective. Say goodbye to frustration and hello to beautifully crafted handwriting."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Books"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Button Link",
      "default": "#books"
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %} 