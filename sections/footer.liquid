{% comment %}theme-check-disable UndefinedObject{% endcomment %}

{%- style -%}
  .footer {
    background: #fff;
    color: #222;
    padding: 60px 20px 30px;
  }

  .footer__content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .footer__logo {
    margin-bottom: 12px;
  }

  .footer__logo img {
    height: 50px;
    width: auto;
  }

  .footer__slogan {
    font-family: 'Poppins', sans-serif;
    font-size: 1.25rem;
    color: #222;
    margin-bottom: 12px;
    font-weight: 400;
  }

  .footer__divider {
    border: none;
    border-top: 1px solid #888;
    margin: 32px auto 28px auto;
    width: 60%;
  }

  .footer__social {
    margin-bottom: 12px;
  }

  .footer__social-list {
    display: flex;
    justify-content: center;
    gap: 24px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__social-item {
    width: 36px;
    height: 36px;
    background: none;
    border: 2px solid #2465aa;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: border-color 0.2s, background 0.2s;
  }

  .footer__social-item:hover {
    border-color: #ff6b35;
    background: #fff3ec;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    color: #2465aa;
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer__social-link svg {
    width: 24px;
    height: 24px;
    fill: currentColor;
    display: block;
    transition: fill 0.2s;
  }

  .footer__social-item:hover .footer__social-link {
    color: #ff6b35;
  }

  .footer__copyright {
    font-family: 'Poppins', sans-serif;
    font-size: 1.3rem;
    color: #222;
    margin-top: 12px;
    margin-bottom: 0;
  }

  @media screen and (max-width: 768px) {
    .footer {
      padding: 40px 10px 20px;
    }
    
    .footer__slogan {
      font-size: 1rem;
    }
    
    .footer__divider {
      width: 90%;
    }
  }
{%- endstyle -%}

