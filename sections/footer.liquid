{% comment %}theme-check-disable UndefinedObject{% endcomment %}

{%- style -%}
  .footer {
    background: #fff;
    color: #222;
    padding: 60px 20px 30px;
  }

  .footer__content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .footer__logo {
    margin-bottom: 18px;
  }

  .footer__logo img {
    height: 50px;
    width: auto;
  }

  .footer__slogan {
    font-family: 'Poppins', sans-serif;
    font-size: 1.15rem;
    color: #222;
    margin-bottom: 32px;
    font-weight: 400;
  }

  .footer__divider {
    border: none;
    border-top: 1px solid #888;
    margin: 32px auto 28px auto;
    width: 60%;
  }

  .footer__social {
    margin-bottom: 28px;
  }

  .footer__social-list {
    display: flex;
    justify-content: center;
    gap: 24px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__social-item {
    width: 38px;
    height: 38px;
    background: none;
    border: 2px solid #222;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s, color 0.2s;
  }

  .footer__social-item:hover {
    background: #f0f0f0;
    color: #ff6b35;
    border-color: #ff6b35;
  }

  .footer__social-link {
    color: #222;
    text-decoration: none;
    font-size: 1.35rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .footer__copyright {
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    color: #222;
    margin-top: 18px;
    margin-bottom: 0;
  }

  @media screen and (max-width: 768px) {
    .footer {
      padding: 40px 10px 20px;
    }
    
    .footer__slogan {
      font-size: 1rem;
    }
    
    .footer__divider {
      width: 90%;
    }
  }
{%- endstyle -%}

