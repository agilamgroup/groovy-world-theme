{%- style -%}
  .footer {
    background: #333;
    color: white;
    padding: 60px 20px 30px;
  }

  .footer__content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .footer__logo {
    margin-bottom: 20px;
  }

  .footer__logo img {
    height: 50px;
    width: auto;
  }

  .footer__logo-text {
    font-family: 'Preahvihear', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
  }

  .footer__slogan {
    font-family: 'Preahvihear', sans-serif;
    font-size: 1.1rem;
    color: #ccc;
    margin-bottom: 30px;
  }

  .footer__social {
    margin-bottom: 30px;
  }

  .footer__social-list {
    display: flex;
    justify-content: center;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__social-item {
    width: 40px;
    height: 40px;
    background: #ff6b35;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .footer__social-item:hover {
    background: #e55a2b;
  }

  .footer__social-link {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
  }

  .footer__copyright {
    font-family: 'Preahvihear', sans-serif;
    font-size: 0.9rem;
    color: #999;
    border-top: 1px solid #555;
    padding-top: 20px;
  }

  @media screen and (max-width: 768px) {
    .footer {
      padding: 40px 20px 20px;
    }
    
    .footer__logo-text {
      font-size: 1.5rem;
    }
    
    .footer__slogan {
      font-size: 1rem;
    }
  }
{%- endstyle -%}

