<style>
  .gw-product-grid {
    padding: 2.5rem 0 3rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }
  .gw-product-grid .gw-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(290px, 1fr));
    gap: 2.2rem;
    padding: 0 1rem;
  }
  .gw-card {
    background: #fff;
    border-radius: 22px;
    box-shadow: 0 6px 32px rgba(36,101,170,0.08);
    border: none;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    transition: box-shadow 0.18s, transform 0.18s;
    min-height: 480px;
  }
  .gw-card:hover {
    box-shadow: 0 12px 36px rgba(36,101,170,0.16);
    transform: translateY(-3px) scale(1.012);
  }
  .gw-card-image-wrap {
    width: 100%;
    padding: 2rem 2rem 0 2rem;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    position: relative;
  }
  .gw-card-image {
    width: 100%;
    max-width: 220px;
    height: 220px;
    object-fit: contain;
    background: #f8f8f8;
    border: 2px solid #2465aa;
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(36,101,170,0.07);
    margin: 0 auto;
    display: block;
  }
  .gw-badge {
    position: absolute;
    top: 1.2rem;
    left: 2rem;
    background: #eafff2;
    color: #1db16b;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 16px;
    padding: 0.25em 1.1em;
    box-shadow: 0 1px 4px rgba(36,101,170,0.07);
    font-family: 'Fredoka', 'Preahvihear', Arial, sans-serif;
    letter-spacing: 0.01em;
    display: inline-block;
  }
  .gw-badge-sale {
    background: #ffeaea;
    color: #ff2d2d;
    font-size: 1rem;
    font-weight: 700;
    border-radius: 16px;
    padding: 0.25em 1.1em;
    border: 1.5px solid #ff2d2d;
    margin-left: 8px;
    font-family: 'Fredoka', 'Preahvihear', Arial, sans-serif;
    display: inline-block;
  }
  .gw-card-content {
    padding: 1.2rem 1.5rem 1.5rem 1.5rem;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-grow: 1;
  }
  .gw-title {
    font-family: 'Fredoka', 'Preahvihear', Arial, sans-serif;
    font-size: 1.35rem;
    font-weight: 700;
    color: #222;
    text-align: center;
    margin: 0.7rem 0 0.5rem 0;
    min-height: 2.5em;
    line-height: 1.2;
  }
  .gw-prices {
    margin-bottom: 1.1rem;
    text-align: center;
  }
  .gw-old-price {
    text-decoration: line-through;
    color: #aaa;
    font-size: 1rem;
    margin-right: 0.5em;
    font-weight: 400;
  }
  .gw-new-price {
    color: #ff6b35;
    font-size: 1.22rem;
    font-weight: 700;
    letter-spacing: 0.01em;
  }
  .gw-card-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
    width: 100%;
    margin-top: 0.5rem;
  }
  .gw-btn {
    border: 2px solid #ff6b35;
    color: #ff6b35;
    background: #fff;
    border-radius: 6px;
    font-family: 'Fredoka', 'Preahvihear', Arial, sans-serif;
    font-size: 1.2rem;
    font-weight: 700;
    padding: 0.7em 0;
    width: 100%;
    cursor: pointer;
    transition: background 0.18s, color 0.18s, box-shadow 0.18s;
    box-shadow: 0 1px 4px rgba(36,101,170,0.04);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5em;
  }
  .gw-btn.buy {
    background: #ff6b35;
    color: #fff;
    border: 2px solid #ff6b35;
  }
  .gw-btn.buy:hover {
    background: #fff3ec;
    color: #ff6b35;
  }
  .gw-btn.cart:hover {
    background: #fff3ec;
    color: #ff6b35;
  }
  .gw-btn:disabled {
    background: #eee;
    color: #bbb;
    border-color: #eee;
    cursor: not-allowed;
  }
  .gw-cart-icon {
    width: 1.2em;
    height: 1.2em;
    display: inline-block;
    vertical-align: middle;
    margin-right: 0.2em;
    margin-bottom: 2px;
  }
  @media (max-width: 900px) {
    .gw-product-grid .gw-grid {
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.2rem;
    }
    .gw-card-image {
      max-width: 150px;
      height: 150px;
    }
  }
  @media (max-width: 600px) {
    .gw-product-grid {
      padding: 1.2rem 0 2rem 0;
    }
    .gw-product-grid .gw-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 0 0.2rem;
    }
    .gw-card-content {
      padding: 0.8rem 0.5rem 1rem 0.5rem;
    }
  }
</style>

<div class="gw-product-grid">
  <div class="gw-grid">
    {% for product in collection.products %}
      <div class="gw-card">
        <div class="gw-card-image-wrap">
          {% if product.available %}
            <span class="gw-badge">Available</span>
            {% if product.compare_at_price > product.price %}
              <span class="gw-badge-sale">Sale</span>
            {% endif %}
          {% endif %}
          <a href="{{ product.url }}">
            {% if product.featured_media %}
              <img 
                src="{{ product.featured_media | image_url: width: 400 }}"
                alt="{{ product.featured_media.alt | escape | default: product.title }}"
                class="gw-card-image"
                loading="lazy"
              >
            {% else %}
              <img 
                src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-image.png"
                alt="Product placeholder"
                class="gw-card-image"
                style="opacity: 0.5;"
              >
            {% endif %}
          </a>
        </div>
        <div class="gw-card-content">
          <div class="gw-title">{{ product.title }}</div>
          <div class="gw-prices">
            {% if product.compare_at_price > product.price %}
              <span class="gw-old-price">{{ product.compare_at_price | money }}</span>
              <span class="gw-new-price">{{ product.price | money }}</span>
            {% else %}
              <span class="gw-new-price">{{ product.price | money }}</span>
            {% endif %}
          </div>
          <div class="gw-card-buttons">
            <a href="{{ product.url }}" class="gw-btn buy">Buy Now</a>
            <form action="/cart/add" method="post" enctype="multipart/form-data" style="margin:0;">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="gw-btn cart" {% unless product.available %}disabled{% endunless %}>
                <span class="gw-cart-icon">ðŸ›’</span> Add to Cart
              </button>
            </form>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Simple Product Grid",
  "settings": [
    {
      "type": "header",
      "content": "Grid Settings"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 16,
      "label": "Products per page"
    }
  ]
}
{% endschema %}
