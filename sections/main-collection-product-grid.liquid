<style>
  .simple-product-grid {
    padding: 2rem 0;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .simple-product-grid .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    padding: 0 1rem;
  }
  
  .simple-product-card {
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
    background: white;
    display: flex;
    flex-direction: column;
  }
  
  .simple-product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  }
  
  .simple-product-image {
    width: 100%;
    height: 280px;
    object-fit: cover;
    background: #f8f8f8;
  }
  
  .simple-product-content {
    padding: 1rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .simple-product-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #333;
    text-decoration: none;
  }
  
  .simple-product-title:hover {
    color: #2465aa;
  }
  
  .simple-product-price {
    font-size: 1.2rem;
    font-weight: 700;
    color: #2465aa;
    margin-bottom: 1rem;
  }
  
  .simple-product-button {
    background: #2465aa;
    color: white;
    border: none;
    padding: 0.75rem 1rem;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    margin-top: auto;
  }
  
  .simple-product-button:hover {
    background: #1a4a7a;
  }
  
  .simple-product-button:disabled {
    background: #ccc;
    cursor: not-allowed;
  }
  
  .collection-header {
    text-align: center;
    margin-bottom: 2rem;
    padding: 0 1rem;
  }
  
  .collection-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2465aa;
    margin-bottom: 0.5rem;
  }
  
  .collection-description {
    font-size: 1.1rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }
  
  @media (max-width: 768px) {
    .simple-product-grid .grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
      padding: 0 0.5rem;
    }
    
    .collection-title {
      font-size: 2rem;
    }
  }
</style>

<div class="simple-product-grid">
  <div class="collection-header">
    <h1 class="collection-title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-description">{{ collection.description }}</div>
    {% endif %}
  </div>

  {% if collection.products.size > 0 %}
    <div class="grid">
      {% for product in collection.products %}
        <div class="simple-product-card">
          <a href="{{ product.url }}">
            {% if product.featured_media %}
              <img 
                src="{{ product.featured_media | image_url: width: 400 }}"
                alt="{{ product.featured_media.alt | escape | default: product.title }}"
                class="simple-product-image"
                loading="lazy"
              >
            {% else %}
              <img 
                src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-image.png"
                alt="Product placeholder"
                class="simple-product-image"
                style="opacity: 0.5;"
              >
            {% endif %}
          </a>
          
          <div class="simple-product-content">
            <a href="{{ product.url }}" class="simple-product-title">
              {{ product.title }}
            </a>
            
            <div class="simple-product-price">
              {% if product.compare_at_price > product.price %}
                <span style="text-decoration: line-through; color: #999; margin-right: 0.5rem;">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
              {{ product.price | money }}
            </div>
            
            <form action="/cart/add" method="post" enctype="multipart/form-data">
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button 
                type="submit" 
                class="simple-product-button"
                {% unless product.available %}disabled{% endunless %}
              >
                {% if product.available %}
                  Add to Cart
                {% else %}
                  Sold Out
                {% endif %}
              </button>
            </form>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div style="text-align: center; padding: 4rem 1rem;">
      <h2>No products found</h2>
      <p>This collection is empty.</p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Simple Product Grid",
  "settings": [
    {
      "type": "header",
      "content": "Grid Settings"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 16,
      "label": "Products per page"
    }
  ]
}
{% endschema %}
