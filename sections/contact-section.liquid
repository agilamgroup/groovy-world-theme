<section id="contact" class="contact-section" style="background: #eaf7fd; padding: 80px 0;">
  <div style="max-width: 1200px; margin: 0 auto; display: flex; flex-wrap: wrap; gap: 60px; align-items: flex-start;">
    <!-- Left: Contact Form -->
    <div style="flex: 1 1 55%; min-width: 320px;">
      <div style="display: inline-block; padding: 8px 16px; border: 2px solid #f26522; border-radius: 20px; color: #f26522; font-family: 'Preahvihear', sans-serif; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; background: transparent; margin-bottom: 20px;">Get in Touch</div>
      <h2 style="font-family: 'Preahvihear', sans-serif; font-size: 3.2rem; font-weight: 700; color: #2d5da1; margin: 0 0 32px 0;">Send us Your Inquiry</h2>
      
      {%- if request.params.contact_posted == 'true' -%}
        <div style="background: #d4edda; border: 1px solid #c3e6cb; color: #155724; padding: 16px; border-radius: 8px; margin-bottom: 24px; font-family: 'Poppins', sans-serif; font-size: 1.3rem;">
          <div style="display: flex; align-items: center; gap: 8px;">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" fill="#155724"/>
            </svg>
            Thank you for your message! We'll get back to you as soon as possible.
          </div>
        </div>
      {%- endif -%}
      
      <form method="post" action="" accept-charset="UTF-8" style="display: flex; flex-direction: column; gap: 18px;" onsubmit="setTimeout(function(){ window.location.hash = 'contact'; }, 100);">
        <input type="hidden" name="form_type" value="contact" />
        <input type="hidden" name="utf8" value="âœ“" />
        <label style="font-family: 'Poppins', sans-serif; font-size: 1.3rem; color: #222;">Your name
          <input type="text" name="contact[name]" required style="width: 100%; padding: 14px; border-radius: 8px; border: none; background: #fff; margin-top: 6px; font-size: 1.3rem; font-family: 'Preahvihear', sans-serif;" />
        </label>
        <label style="font-family: 'Poppins', sans-serif; font-size: 1.3rem; color: #222;">Your email
          <input type="email" name="contact[email]" required style="width: 100%; padding: 14px; border-radius: 8px; border: none; background: #fff; margin-top: 6px; font-size: 1.3rem; font-family: 'Preahvihear', sans-serif;" />
        </label>
        <label style="font-family: 'Poppins', sans-serif; font-size: 1.3rem; color: #222;">Subject
          <input type="text" name="contact[subject]" style="width: 100%; padding: 14px; border-radius: 8px; border: none; background: #fff; margin-top: 6px; font-size: 1.3rem; font-family: 'Preahvihear', sans-serif;" />
        </label>
        <label style="font-family: 'Poppins', sans-serif; font-size: 1.3rem; color: #222;">Your message
          <textarea name="contact[body]" required style="width: 100%; min-height: 120px; padding: 14px; border-radius: 8px; border: none; background: #fff; margin-top: 6px; font-size: 1.3rem; font-family: 'Preahvihear', sans-serif;"></textarea>
        </label>
        <button type="submit" style="background: #f26522; color: #fff; border: none; border-radius: 6px; padding: 16px 32px; font-family: 'Preahvihear', sans-serif; font-size: 1.2rem; font-weight: 600; cursor: pointer; margin-top: 10px; width: fit-content;">Send Message</button>
      </form>
    </div>
    <!-- Right: Email Info -->
    <div style="flex: 1 1 40%; min-width: 320px; display: flex; flex-direction: column; align-items: flex-start; justify-content: flex-start; gap: 24px;">
      <div style="display: inline-block; padding: 8px 16px; border: 2px solid #f26522; border-radius: 20px; color: #f26522; font-family: 'Preahvihear', sans-serif; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; background: transparent;">Email Address</div>
      <h3 style="font-family: 'Preahvihear', sans-serif; font-size: 3.2rem; font-weight: 700; color: #2d5da1; margin: 0;">Write an Email</h3>
      <div style="font-family: 'Poppins', sans-serif; font-size: 1.3rem; color: #222; margin-top: 10px;">
        For book inquiries:<br />
        <span style="font-weight: bold; font-size: 1.3rem; color: #111;">hello@groovy-world.com</span>
      </div>
    </div>
  </div>
</section>

<style>
@media (max-width: 750px) {
  .contact-section, .contact-section form {
    padding-left: 16px !important;
    padding-right: 16px !important;
    box-sizing: border-box;
  }
}
</style>

