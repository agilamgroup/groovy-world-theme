{% comment %}
  Products Showcase Section - Groovy World Homepage
  Shows featured products/books
{% endcomment %}

<div class="products-showcase" style="background: white; padding: 80px 20px;">
  <div style="max-width: 1200px; margin: 0 auto;">
    
    <!-- Section Title -->
    <div style="text-align: center; margin-bottom: 60px;">
      <h2 style="font-family: 'Preahvihear', sans-serif; font-size: 2.5rem; font-weight: 700; color: #333; margin: 0 0 20px 0;">
        Our Featured Books
      </h2>
      <p style="font-family: 'Preahvihear', sans-serif; font-size: 1.1rem; color: #666; margin: 0; max-width: 600px; margin: 0 auto;">
        Discover our collection of carefully crafted books designed to make learning fun and effective.
      </p>
    </div>

    <!-- Products Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 40px;">
      
      <!-- Product 1 -->
      <div style="background: white; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease;">
        <div style="width: 100%; height: 200px; background: #ff6b35; display: flex; align-items: center; justify-content: center; color: white; font-family: 'Preahvihear', sans-serif; font-size: 1.2rem; font-weight: bold;">
          Book Cover 1
        </div>
        <div style="padding: 24px;">
          <h3 style="font-family: 'Preahvihear', sans-serif; font-size: 1.3rem; font-weight: 600; color: #333; margin: 0 0 10px 0;">
            Groovy Writing Book 1
          </h3>
          <p style="font-family: 'Preahvihear', sans-serif; font-size: 0.95rem; color: #666; line-height: 1.5; margin: 0 0 20px 0;">
            Perfect for beginners, this book introduces fundamental writing skills through fun exercises and colorful illustrations.
          </p>
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <span style="font-family: 'Preahvihear', sans-serif; font-size: 1.2rem; font-weight: 600; color: #ff6b35;">
              €19.99
            </span>
            <a href="#" style="background: #ff6b35; color: white; padding: 8px 16px; border-radius: 20px; text-decoration: none; font-family: 'Preahvihear', sans-serif; font-size: 0.9rem; font-weight: 600; transition: background-color 0.3s ease;">
              Add to Cart
            </a>
          </div>
        </div>
      </div>

      <!-- Product 2 -->
      <div style="background: white; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease;">
        <div style="width: 100%; height: 200px; background: #ff6b35; display: flex; align-items: center; justify-content: center; color: white; font-family: 'Preahvihear', sans-serif; font-size: 1.2rem; font-weight: bold;">
          Book Cover 2
        </div>
        <div style="padding: 24px;">
          <h3 style="font-family: 'Preahvihear', sans-serif; font-size: 1.3rem; font-weight: 600; color: #333; margin: 0 0 10px 0;">
            Groovy Writing Book 2
          </h3>
          <p style="font-family: 'Preahvihear', sans-serif; font-size: 0.95rem; color: #666; line-height: 1.5; margin: 0 0 20px 0;">
            Advanced writing techniques and creative exercises to help children develop their unique writing style.
          </p>
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <span style="font-family: 'Preahvihear', sans-serif; font-size: 1.2rem; font-weight: 600; color: #ff6b35;">
              €24.99
            </span>
            <a href="#" style="background: #ff6b35; color: white; padding: 8px 16px; border-radius: 20px; text-decoration: none; font-family: 'Preahvihear', sans-serif; font-size: 0.9rem; font-weight: 600; transition: background-color 0.3s ease;">
              Add to Cart
            </a>
          </div>
        </div>
      </div>

      <!-- Product 3 -->
      <div style="background: white; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease;">
        <div style="width: 100%; height: 200px; background: #ff6b35; display: flex; align-items: center; justify-content: center; color: white; font-family: 'Preahvihear', sans-serif; font-size: 1.2rem; font-weight: bold;">
          Book Cover 3
        </div>
        <div style="padding: 24px;">
          <h3 style="font-family: 'Preahvihear', sans-serif; font-size: 1.3rem; font-weight: 600; color: #333; margin: 0 0 10px 0;">
            Groovy Writing Complete Set
          </h3>
          <p style="font-family: 'Preahvihear', sans-serif; font-size: 0.95rem; color: #666; line-height: 1.5; margin: 0 0 20px 0;">
            Complete collection of all Groovy Writing books with bonus materials and progress tracking tools.
          </p>
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <span style="font-family: 'Preahvihear', sans-serif; font-size: 1.2rem; font-weight: 600; color: #ff6b35;">
              €39.99
            </span>
            <a href="#" style="background: #ff6b35; color: white; padding: 8px 16px; border-radius: 20px; text-decoration: none; font-family: 'Preahvihear', sans-serif; font-size: 0.9rem; font-weight: 600; transition: background-color 0.3s ease;">
              Add to Cart
            </a>
          </div>
        </div>
      </div>

    </div>

    <!-- View All Button -->
    <div style="text-align: center; margin-top: 60px;">
      <a href="{{ routes.collections_url }}" style="background: #ff6b35; color: white; padding: 16px 32px; border-radius: 25px; text-decoration: none; font-family: 'Preahvihear', sans-serif; font-size: 1rem; font-weight: 600; transition: background-color 0.3s ease; display: inline-block;">
        View All Books
      </a>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Products Showcase",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Featured Books"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Discover our collection of carefully crafted books designed to make learning fun and effective."
    }
  ],
  "presets": [
    {
      "name": "Products Showcase",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %} 